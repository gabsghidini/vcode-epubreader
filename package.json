{
  "name": "vscode-epub-reader",
  "id": "vscode-epub-reader",
  "displayName": "EPUB Reader",
  "description": "Lê arquivos EPUB dentro da barra lateral do VS Code e salva a posição de leitura.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "publisher": "gabsghidini",
  "categories": ["Other"],
  "keywords": ["epub", "reader", "ebook", "book", "reading"],
  "repository": {
    "type": "git",
    "url": "https://github.com/gabsghidini/vscode-epub-reader"
  },
  "license": "MIT",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run build",
    "build:vsix": "npm run build && vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "@types/node": "^18.0.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "epubReader.openFile",
        "title": "Open EPUB File"
      },
      {
        "command": "epubReader.focusView",
        "title": "Focus EPUB Reader View"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "epubReader.explorerView",
          "name": "EPUB Reader",
          "type": "webview",
          "retainContextWhenHidden": true
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "epubReader.openFile",
          "when": "resourceExtname == .epub",
          "group": "navigation"
        }
      ]
    }
  }
}
