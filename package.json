{
  "name": "vscode-epub-reader",
  "id": "vscode-epub-reader",
  "displayName": "EPUB Reader",
  "description": "Lê arquivos EPUB dentro da barra lateral do VS Code e salva a posição de leitura.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "publisher": "gabsghidini",
  "categories": ["Other"],
  "activationEvents": [
    "onView:epubReader.sidebar",
    "onCommand:epubReader.openFile"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run build"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "@types/node": "^18.0.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "epubReader.openFile",
        "title": "Open EPUB File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "epubReader.container",
          "title": "Epub Reader",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "epubReader.container": [
        {
          "id": "epubReader.sidebar",
          "name": "Epub Reader"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "epubReader.openFile",
          "when": "resourceExtname == .epub",
          "group": "navigation"
        }
      ]
    }
  }
}
